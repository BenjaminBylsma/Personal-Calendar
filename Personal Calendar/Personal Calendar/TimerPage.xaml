        <Button x:Name="clockButton" Content="Clock" HorizontalAlignment="Left" Margin="176,40,0,0" VerticalAlignment="Top" Width="100" Height="30" FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold" Background="#FF078AF7" BorderThickness="3,.51,.51,2" BorderBrush="#FF383838" Foreground="White" Click="clockButton_Click"/>
